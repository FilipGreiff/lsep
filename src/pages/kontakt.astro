---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ui/ContactForm.astro';
import ContactInfo from '../components/ui/ContactInfo.astro';

const contactInfo = [
  {
    icon: 'location_on',
    title: 'Besöksadress',
    details: ['Brearedsvägen 370', '439 64 Frillesås']
  },
  {
    icon: 'phone',
    title: 'Telefon',
    details: ['0708-66 21 80']
  },
  {
    icon: 'email',
    title: 'E-post',
    details: ['info@lassesentreprenad.se']
  },
  {
    icon: 'schedule',
    title: 'Öppettider',
    details: ['Måndag-Fredag: 07:00-16:00']
  }
];
---

<Layout 
  title="Kontakt | Lasses Entreprenad AB"
  description="Kontakta oss för frågor om våra tjänster eller för att begära en offert."
>
  <Hero 
    title="Kontakta Oss"
    description="Vi hjälper dig med ditt nästa projekt"
    image="/bild5.jpg"
  />
  
  <div class="relative">
    <div class="absolute inset-0 bg-gradient-to-b from-industrial-black/90 to-transparent h-32"></div>
    <section class="relative py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <div class="lg:col-span-2">
              <ContactForm />
            </div>
            <div class="space-y-6">
              {contactInfo.map(info => (
                <ContactInfo {...info} />
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <section class="bg-industrial-black py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-white">Hitta Till Oss</h2>
        <div class="bg-white rounded-lg shadow-xl overflow-hidden">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2131.890141865491!2d12.1234567!3d57.1234567!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTfCsDA3JzM0LjQiTiAxMsKwMDcnMzQuNCJF!5e0!3m2!1ssv!2sse!4v1234567890"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
          ></iframe>
        </div>
      </div>
    </div>
  </section>
</Layout>
---