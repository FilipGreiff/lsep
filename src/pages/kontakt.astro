---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
---

<Layout 
  title="Kontakt | Lasses Entreprenad AB"
  description="Kontakta oss för frågor om våra tjänster eller för att begära en offert."
>
  <Hero 
    title="Kontakta Oss"
    description="Vi hjälper dig med ditt nästa projekt"
    image="/bild5.jpg"
  />
  
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold mb-6">Kontaktinformation</h2>
          <div class="space-y-4">
            <div class="flex items-start">
              <span class="material-icons text-chrome-blue mr-3">location_on</span>
              <div>
                <p class="font-bold">Adress</p>
                <p>Brearedsvägen 370</p>
                <p>439 64 Frillesås</p>
              </div>
            </div>
            <div class="flex items-start">
              <span class="material-icons text-chrome-blue mr-3">phone</span>
              <div>
                <p class="font-bold">Telefon</p>
                <p>0708-66 21 80</p>
              </div>
            </div>
            <div class="flex items-start">
              <span class="material-icons text-chrome-blue mr-3">email</span>
              <div>
                <p class="font-bold">E-post</p>
                <p>info@lassesentreprenad.se</p>
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <h2 class="text-3xl font-bold mb-6">Skicka Meddelande</h2>
          <form class="space-y-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">Namn</label>
              <input 
                type="text" 
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-chrome-blue focus:ring focus:ring-chrome-blue focus:ring-opacity-50"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">E-post</label>
              <input 
                type="email" 
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-chrome-blue focus:ring focus:ring-chrome-blue focus:ring-opacity-50"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Meddelande</label>
              <textarea 
                rows="4"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-chrome-blue focus:ring focus:ring-chrome-blue focus:ring-opacity-50"
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-chrome-blue text-white font-bold py-3 px-8 rounded-lg hover:bg-opacity-90 transition-colors"
            >
              Skicka Meddelande
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>