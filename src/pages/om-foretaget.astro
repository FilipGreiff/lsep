---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';

const milestones = [
  { year: 1990, text: 'Företaget grundas av Lars Gustavsson' },
  { year: 2004, text: 'Ombildning till aktiebolag' },
  { year: 2010, text: 'Förvärv av Gisslens entreprenad AB' },
  { year: 2023, text: 'Över 30 anställda och modern maskinpark' }
];

const values = [
  {
    icon: 'engineering',
    title: 'Expertis',
    description: 'Över 30 års erfarenhet av markentreprenad och infrastrukturprojekt.'
  },
  {
    icon: 'verified',
    title: 'Kvalitet',
    description: 'ISO-certifierade processer och högsta standard på alla arbeten.'
  },
  {
    icon: 'eco',
    title: 'Miljöansvar',
    description: 'Hållbara lösningar och minimal miljöpåverkan i alla projekt.'
  }
];
---

<Layout 
  title="Om Lasses Entreprenad AB | Vår Historia och Värderingar"
  description="Lär känna historien bakom Lasses Entreprenad AB - från starten 1990 till dagens ledande entreprenadföretag."
>
  <Hero 
    title="Om Företaget"
    description="En historia av kvalitet och kompetens sedan 1990"
    image="/bild2.jpg"
  />
  
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">Vår Historia</h2>
        <div class="relative">
          <div class="absolute left-1/2 -ml-0.5 w-0.5 h-full bg-chrome-blue"></div>
          <div class="space-y-16">
            {milestones.map(({ year, text }, index) => (
              <div class={`flex items-center ${index % 2 === 0 ? 'flex-row-reverse' : ''}`}>
                <div class="w-1/2 px-8">
                  <div class={`bg-white p-6 rounded-lg shadow-lg ${index % 2 === 0 ? 'text-right' : ''}`}>
                    <div class="text-chrome-blue font-bold text-2xl mb-2">{year}</div>
                    <p class="text-lg">{text}</p>
                  </div>
                </div>
                <div class="absolute left-1/2 -ml-3 w-6 h-6 bg-machine-yellow rounded-full border-4 border-white"></div>
                <div class="w-1/2"></div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-industrial-black text-white py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold mb-12 text-center">Våra Värderingar</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {values.map(value => (
          <div class="bg-steel-gray p-8 rounded-lg text-center group hover:bg-machine-yellow/10 transition-colors">
            <span class="material-icons text-5xl text-machine-yellow mb-4">{value.icon}</span>
            <h3 class="text-2xl font-bold mb-4">{value.title}</h3>
            <p class="text-metal-silver">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>