---
interface Props {
  icon: string;
  title: string;
  details: string[];
}

const { icon, title, details } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-lg group hover:shadow-xl transition-all duration-300
            hover:bg-chrome-blue hover:text-white transform hover:-translate-y-1">
  <span class="material-icons text-4xl text-machine-yellow mb-4 group-hover:scale-110 transition-transform">
    {icon}
  </span>
  <h3 class="font-bold text-xl mb-3 group-hover:text-white transition-colors">{title}</h3>
  {details.map(detail => (
    <p class="text-gray-600 group-hover:text-white/90 transition-colors">{detail}</p>
  ))}
</div>
---