---
const services = [
  {
    icon: 'construction',
    title: 'MARKARBETE',
    description: 'Omfattande markarbeten för både små och stora projekt. Vi hanterar allt från grundläggning till färdig mark.',
    image: '/service-1.jpg'
  },
  {
    icon: 'engineering',
    title: 'SCHAKTNING',
    description: 'Professionell schaktning med modern maskinpark. Precision och effektivitet i varje projekt.',
    image: '/service-2.jpg'
  },
  {
    icon: 'water_drop',
    title: 'VA-ARBETEN',
    description: 'Komplett service inom vatten och avlopp. Från projektering till färdig installation.',
    image: '/service-3.jpg'
  }
];
---

<section class="bg-industrial-black text-white py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="font-display text-4xl md:text-5xl font-bold mb-4">VÅRA TJÄNSTER</h2>
      <div class="w-24 h-1 bg-machine-yellow mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {services.map(service => (
        <div class="group relative overflow-hidden">
          <img 
            src={service.image} 
            alt={service.title}
            class="w-full h-[400px] object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-industrial-black to-transparent"></div>
          <div class="absolute bottom-0 left-0 right-0 p-6">
            <span class="material-icons text-machine-yellow text-4xl mb-4">{service.icon}</span>
            <h3 class="font-display text-2xl font-bold mb-2">{service.title}</h3>
            <p class="text-metal-silver">{service.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>