---
interface Testimonial {
  quote: string;
  author: string;
  role: string;
}

const testimonials: Testimonial[] = [
  {
    quote: "Lasses Entreprenad levererade ett fantastiskt arbete med vår tomtmark. Professionella från början till slut.",
    author: "Anders Svensson",
    role: "Villaägare"
  },
  {
    quote: "Vi har anlitat Lasses för flera projekt och är alltid nöjda med resultatet. Pålitliga och kunniga.",
    author: "Maria Andersson",
    role: "Projektledare, Byggbolaget AB"
  }
];
---

<section class="py-20 bg-earth-tone text-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Vad Våra Kunder Säger</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {testimonials.map(testimonial => (
        <div class="bg-white/10 p-8 rounded-lg backdrop-blur-sm">
          <div class="text-chrome-blue text-4xl mb-4">"</div>
          <blockquote class="text-lg mb-6">{testimonial.quote}</blockquote>
          <div class="font-bold">{testimonial.author}</div>
          <div class="text-sm opacity-75">{testimonial.role}</div>
        </div>
      ))}
    </div>
  </div>
</section>