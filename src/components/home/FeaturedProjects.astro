---
interface Project {
  title: string;
  description: string;
  image: string;
  category: string;
}

const projects: Project[] = [
  {
    title: 'Vägbygge Frillesås',
    description: 'Komplett vägbyggnation från orörd mark till asfalterad väg',
    image: '/bild1.jpg',
    category: 'Infrastruktur'
  },
  {
    title: 'VA-Installation',
    description: 'Omfattande VA-arbete för nytt bostadsområde',
    image: '/bild2.jpg',
    category: 'VA-Arbeten'
  },
  {
    title: 'Markberedning',
    description: 'Förberedelse av mark för industribyggnad',
    image: '/bild3.jpg',
    category: 'Markarbete'
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Senaste Projekten</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
          <img 
            src={project.image} 
            alt={project.title}
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <div class="text-sm text-chrome-blue font-semibold mb-2">
              {project.category}
            </div>
            <h3 class="text-xl font-bold mb-2">{project.title}</h3>
            <p class="text-gray-600">{project.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>