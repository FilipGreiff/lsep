---
interface Props {
  images: {
    id: number;
    src: string;
    thumb: string;
    alt: string;
  }[];
}

const { images } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {images.map((image, index) => (
    <div class={`group relative overflow-hidden rounded-lg shadow-lg
                ${index % 5 === 0 ? 'md:col-span-2 md:row-span-2' : ''}`}>
      <img 
        src={image.thumb}
        alt={image.alt}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 
                  group-hover:opacity-100 transition-opacity duration-300">
        <div class="absolute bottom-0 left-0 right-0 p-6">
          <a 
            href={image.src}
            class="inline-block bg-machine-yellow text-industrial-black px-6 py-2 rounded-full 
                   font-bold transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"
          >
            Visa Bild
          </a>
        </div>
      </div>
    </div>
  ))}
</div>

<script>
  // Add lightbox functionality here if needed
</script>
